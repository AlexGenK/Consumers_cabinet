<h2>Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field form-group mb-2">
    <%= f.label :email, 'Email' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-xl-4 col-lg-5" %>
  </div>

  <div class="actions">
    <%= f.submit "Отправьте мне инструкцию по сбросу пароля", class: "btn btn-outline-dark col-xl-4 col-lg-5" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
