<h3>Платежные реквизиты</h3>
<br>
<%= form_for [:admin, @payment] do |f| %>
	<div class='form-group row'>
		<%= f.label :company, "Получатель", class: "col-md-2 col-lg-1 col-form-label" %>
		<div class='col-sm-5'>
			<%= f.text_field :company, class: "form-control" %>
			<div class="invalid-feedback">Не может быть пустым</div>
		</div>
	</div>
	<div class='form-group row'>
		<%= f.label :edrpou, "ЕДРОПУ", class: "col-md-2 col-lg-1 col-form-label" %>
		<div class='col-sm-5'>
			<%= f.number_field :edrpou, class: "form-control" %>
			<div class="invalid-feedback">Не может быть пустым. Содержит 8 цифр</div>
		</div>
	</div>
	<div class='form-group row'>
		<%= f.label :account, "Счёт", class: "col-md-2 col-lg-1 col-form-label" %>
		<div class='col-sm-5'>
			<%= f.text_field :account, class: "form-control" %>
			<div class="invalid-feedback">Не может быть пустым. Должен быть в формате IBAN</div>
		</div>
	</div>
	<div class='form-group row'>
		<%= f.label :bank, "Банк", class: "col-md-2 col-lg-1 col-form-label" %>
		<div class='col-sm-5'>
			<%= f.text_field :bank, class: "form-control" %>
			<div class="invalid-feedback">Не может быть пустым</div>
		</div>
	</div>
	<div class='form-group row'>
		<%= f.label :mfo, "МФО", class: "col-md-2 col-lg-1 col-form-label" %>
		<div class='col-sm-5'>
			<%= f.number_field :mfo, class: "form-control" %>
			<div class="invalid-feedback">Не может быть пустым. Содержит 6 цифр</div>
		</div>
	</div>
	<div class='row'>
		<div class='col-sm-3 mb-2'>
		<%= f.button type: 'submit', class: "btn btn-outline-dark btn-block" do %>
			<i class="fas fa-save"></i> Сохранить
		<% end %>
		</div>
	</div>
	<div class='row'>
		<div class='col-sm-3'>
		<%= link_to consumers_path, class: "btn btn-outline-secondary btn-block" do %>
			<i class="fas fa-undo-alt"></i> Вернуться
		<% end %>
		</div>
	</div>
<% end %>