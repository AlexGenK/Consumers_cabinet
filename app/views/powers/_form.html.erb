<%= form_for [consumer, counter, power] do |f| %>
	<%= f.label :active, "Активная наст." %>
	<%= f.number_field :active %>
	<%= f.label :before_active, "пред." %>
	<%= f.number_field :before_active %>
	<% dif = power.active.to_i - power.before_active.to_i %>
	<%= "Разность: #{dif}" %>
	<%= "Раcход: #{dif * counter.ratio}" %>
	<br>

	<%= f.label :reactive, "Реактивная наст." %>
	<%= f.number_field :reactive %>
	<%= f.label :before_reactive, "пред." %>
	<%= f.number_field :before_reactive %>
	<% dif = power.reactive.to_i - power.before_reactive.to_i %>
	<%= "Разность: #{dif}" %>
	<%= "Раcход: #{dif * counter.ratio}" %>
	<br>

	<%= f.label :generation, "Генерация наст." %>
	<%= f.number_field :generation %>
	<%= f.label :before_generation, "пред." %>
	<%= f.number_field :before_generation %>
	<% dif = power.generation.to_i - power.before_generation.to_i %>
	<%= "Разность: #{dif}" %>
	<%= "Раcход: #{dif * counter.ratio}" %>
	<br>

	<%= f.date_field :measure_date %><br>
	<br
	<%= f.submit "Сохранить" %>
<% end %>